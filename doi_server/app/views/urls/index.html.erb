<h1>Listing urls</h1>

<table>
  <thead>
    <tr>
      <th>Url Text</th>
      <th>Datetime-added</th>
      <th>DOI ID</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @urls.each do |url| %>
      <tr>
        <td><%= url.url_text %></td>
        <td><%= url.datetime_added.to_s.slice(0..15) %></td>
        <td><%= url.doi_id %></td>
        <td><%= link_to 'Show', url %></td>
        <td><%= link_to 'Edit', edit_url_path(url) %></td>
        <td><%= link_to 'Destroy', url, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

