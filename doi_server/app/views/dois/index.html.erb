
<div class="page-header">DOI Server: </div>




<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>

<%= form_tag("/query", {method: "get"}) do %>
  <%= label_tag(:query, "Search for a DOI: ") %>
  <%= text_field_tag(:query) %>
  <%= submit_tag("Search") %>
<% end %>

